<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".logic.activities.CompaniesActivity">

    <!-- The first row contains buttons for testing data and token operations -->
    <fragment
            android:id="@+id/buttonHeaderFragment"
            android:name="authguidance.mobilesample.logic.fragments.HeaderButtonsFragment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_header_buttons"/>

    <!-- The second row is the rest of the screen and contains list items -->
    <ListView
            android:id="@+id/listCompanies"
            app:layout_constraintTop_toBottomOf="@+id/buttonHeaderFragment"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>