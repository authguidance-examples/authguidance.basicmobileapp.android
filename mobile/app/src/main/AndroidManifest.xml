<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="authguidance.mobilesample">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".Application"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".logic.activities.CompaniesActivity"
                android:label="@string/company_activity_title">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".logic.activities.TransactionsActivity"
                android:label="@string/transactions_activity_title"/>
        <activity
                android:name=".logic.activities.LoginActivity"
                android:label="@string/login_activity_title"/>
        <activity
                android:name=".logic.activities.ErrorActivity"
                android:label="@string/error_activity_title"/>
    </application>

</manifest>