<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Makes model a property of this type on the fragment's binding object -->
        <variable name="model"
            type="com.authguidance.basicmobileapp.views.fragments.userinfo.UserInfoViewModel" />
    </data>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".views.fragments.userinfo.UserInfoFragment">

        <!-- Show the logged in user name on success -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewLabelStyle"
            android:id="@+id/logged_in_user"
            android:text="@{model.getLoggedInUser()}"/>

        <!-- Show error summary details when there is an error getting user info -->
        <fragment
            android:id="@+id/userInfoErrorSummaryFragment"
            android:name="com.authguidance.basicmobileapp.views.fragments.ErrorSummaryFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_error_summary"/>

    </LinearLayout>
</layout>