<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".logic.activities.LoginActivity">

    <!-- Show buttons so that we can move back to the home screen -->
    <fragment
            android:id="@+id/buttonHeaderFragment"
            android:name="authguidance.mobilesample.logic.fragments.HeaderButtonsFragment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_header_buttons"/>

</android.support.constraint.ConstraintLayout>