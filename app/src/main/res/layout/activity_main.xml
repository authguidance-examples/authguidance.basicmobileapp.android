<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
                name="activity"
                type="com.authguidance.basicmobileapp.views.activities.MainActivity" />
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- The title bar area shows the app name and the logged in user -->
        <fragment
            android:id="@+id/titleFragment"
            android:name="com.authguidance.basicmobileapp.views.fragments.TitleFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_title"/>

        <!-- Next we show a row of buttons for testing data and token operations -->
        <fragment
                android:id="@+id/buttonHeaderFragment"
                android:name="com.authguidance.basicmobileapp.views.fragments.HeaderButtonsFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_header_buttons"/>

        <!-- The remainder is the main view, which gets swapped out as the user navigates -->
        <fragment
                android:id="@+id/nav_host_fragment"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:defaultNavHost="true"
                app:navGraph="@navigation/nav_graph"/>

    </LinearLayout>
</layout>