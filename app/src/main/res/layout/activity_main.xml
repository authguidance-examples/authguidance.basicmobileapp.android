<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
                name="activity"
                type="authguidance.mobilesample.logic.activities.MainActivity" />
    </data>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <!-- The first row contains buttons for testing data and token operations -->
        <fragment
                android:id="@+id/buttonHeaderFragment"
                android:name="authguidance.mobilesample.logic.fragments.HeaderButtonsFragment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_header_buttons"
                app:itemBackground="@color/colorPrimary"/>

        <!-- The navigation host fragment -->
        <fragment
                android:id="@+id/nav_host_fragment"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                app:defaultNavHost="true"
                android:name="androidx.navigation.fragment.NavHostFragment"
                app:navGraph="@navigation/nav_graph"
                app:layout_constraintTop_toBottomOf="@+id/buttonHeaderFragment"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        <!-- The bottom navigation -->
        <!--android.support.design.widget.BottomNavigationView
                android:id="@+id/main_bottom_navigation"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/nav_host_fragment"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:itemBackground="@color/darkGrey"/-->

    </android.support.constraint.ConstraintLayout>
</layout>