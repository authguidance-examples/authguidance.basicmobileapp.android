<?xml version="1.0" encoding="utf-8"?>
<manifest
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.authguidance.basicmobileapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name="com.authguidance.basicmobileapp.Application"
            android:allowBackup="true"
            android:label="@string/app_name"
            android:icon="@mipmap/ic_launcher"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:networkSecurityConfig="@xml/network_security_config"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning,UnusedAttribute">

        <!-- Our single activity uses single top which prevents recreating it when it is on top of the stack
             Also we prevent activity restarts when the orientation is changed -->
        <activity
                android:name=".logic.activities.MainActivity"
                android:launchMode="singleTop"
                android:configChanges="orientation|screenSize"
                android:label="@string/app_name">

            <!-- The intent to launch the app -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <!-- Androidx navigation -->
            <nav-graph android:value="@navigation/nav_graph" />
        </activity>

        <!-- A dedicated activity for handling deep links in a controlled manner -->
        <activity
            android:name=".logic.activities.DeepLinkForwardingActivity"
            android:launchMode="singleTask"
            android:noHistory="true">

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https" android:host="authguidance-examples.com"/>
            </intent-filter>
        </activity>

        <!-- A custom receiver activity for logout responses, since AppAuth does not yet support logout -->
        <activity android:name=".plumbing.oauth.LogoutRedirectUriReceiverActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data
                    android:scheme="com.authguidance.basicmobilelogout" />
            </intent-filter>
        </activity>
    </application>
</manifest>